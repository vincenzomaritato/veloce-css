{
  "name": "veloce-css",
  "version": "0.1.0",
  "description": "The lightweight, high-performance CSS animation library that makes your website faster than a double espresso. 103+ animations with modern effects.",
  "main": "dist/veloce.css",
  "style": "dist/veloce.min.css",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:css": "sass src/veloce.scss dist/veloce.css --no-source-map && npx postcss dist/veloce.css -o dist/veloce.min.css",
    "watch:css": "sass --watch src/veloce.scss dist/veloce.css --no-source-map",
    "build": "npm run build:css",
    "prepublishOnly": "npm run build:css"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "animations",
    "animation-library",
    "css-animations",
    "keyframes",
    "animate",
    "animate.css",
    "performance",
    "accessibility",
    "a11y",
    "prefers-reduced-motion",
    "gpu-accelerated",
    "transform",
    "opacity",
    "velocecss",
    "veloce",
    "modern",
    "2025",
    "blur",
    "text-reveal",
    "3d",
    "fade",
    "bounce",
    "zoom",
    "slide",
    "flip",
    "rotate"
  ],
  "author": {
    "name": "Vincenzo Maritato",
    "email": "hi@vmaritato.com",
    "url": "https://vmaritato.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vincenzomaritato/velocecss.git"
  },
  "bugs": {
    "url": "https://github.com/vincenzomaritato/velocecss/issues"
  },
  "homepage": "https://github.com/vincenzomaritato/velocecss#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    ">0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.94.2"
  }
}
